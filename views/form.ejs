<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <style>
      @import url("https://fonts.googleapis.com/css2?family=Rubik:ital,wght@0,300..900;1,300..900&display=swap");
      * {
        padding: 0;
        margin: 0;
        box-sizing: border-box;
        font-family: "Rubik";
        letter-spacing: 0.5px;
        word-spacing: 1.25px;
      }
      body {
        background-color: #666;
      }
      .container {
        border-radius: 10px;
        background-color: #eeeeee;
        padding: 2.5rem;
        margin: 5rem auto;
        width: 70%;
        box-shadow: inset 0 0 20px rgba(0, 0, 0, 0.8);
      }
      input[type="text"] {
        width: 85%;
        font-size: 1.25rem;
        margin: 2rem auto;
        padding: 0.75rem;
        border-radius: 8px;
        border: 2px solid #666;
        display: block;
        font-weight: 700;
      }
      textarea {
        font-size: 1.2rem;
        display: block;
        width: 90%;
        resize: none;
        padding: 0.2rem;
        border: 2px solid #666;
        height: 300px;
        border-radius: 8px;
        padding: 1rem;
        margin: 0 auto;
      }
      input[list="tag"] {
        border: 2px solid #666;
        font-size: 1rem;
        margin: 2rem 0;
        border: 2px solid #666;
        padding: 0.5rem;
        border-radius: 8px;
      }
      .container div {
        width: 90%;
        margin: 0 auto;
        display: block;
      }
      input[type="submit"] {
        padding: 0.5rem;
        width: 100px;
        border: none;
        border: 5px solid #436850;
        color: #fff;
        background-color: #40A578;
        box-shadow: 0 0 5px rgba(0, 0, 0, 0.5);
        border-radius: 5px;
        font-size: 1.25rem;
        margin: 0 3rem;
      }
      label {
        font-size: 1.5rem;
        margin-left: 1rem;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <form action="<%=locals.action%>" method="<%=locals.method%>">
        <input
          type="text"
          name="title"
          id="title"
          placeholder="Title"
          required
        />
        <textarea
          name="content"
          id="content"
          placeholder="Blog Here..."
          required
        ></textarea>
        <div>
          <label
            >On:
            <input list="tag" name="tag" placeholder="Tag" required />
          </label>
          <datalist id="tag">
            <option value="Personal">Personal</option>
            <option value="Fashion">Fashion</option>
            <option value="Travel">Travel</option>
            <option value="Food">Food</option>
            <option value="Health">Health</option>
            <option value="Photography">Photography</option>
            <option value="Art">Art</option>
            <option value="Music">Music</option>
            <option value="Sports">Sports</option>
            <option value="Tech">Tech</option>
            <option value="Finance">Finance</option>
            <option value="Political">Political</option>
          </datalist>
          <input type="submit" value="Submit" />
        </div>
      </form>
    </div>
  </body>

  <script>
    if (`<%=locals.toEdit%>` && `<%=locals.action%>`.includes(`/edit`)) {
      document.addEventListener("DOMContentLoaded", () => {
        const titleElement = document.querySelector("#title");
        const blogElement = document.querySelector("textarea");
        const tagElement = document.querySelector("input[list='tag']");
        titleElement.value = `<%= locals.title %>`;
        blogElement.value = `<%= locals.blog %>`;
        tagElement.value = `<%= locals.tag %>`;
        blogElement.focus();
      });
    }
  </script>
</html>
