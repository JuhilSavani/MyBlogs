<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <style>
      @import url("https://fonts.googleapis.com/css2?family=Rubik:ital,wght@0,300..900;1,300..900&display=swap");
      * {
        padding: 0;
        margin: 0;
        box-sizing: border-box;
        font-family: "Rubik";
        letter-spacing: 0.5px;
        word-spacing: 1.25px;
      }
      body {
        background-color: #666;
      }
      :root {
        --title-size: 4rem;
        --sub-title-size: 2.5rem;
        --heading-1-size: 2rem;
        --heading-2-size: 1.75rem;
        --heading-3-size: 1.5rem;
        --body-size: 1.25rem;
      }
      *::selection{
        background-color: #F4CE14;
      }
      .container {
        border-radius: 10px;
        background-color: #eeeeee;
        padding: 2.5rem;
        margin: 5rem auto;
        width: 85%;
        position: relative;
        box-shadow: inset 0 0 16px rgba(0, 0, 0, 1);
      }
      .container > h1 {
        font-size: var(--title-size);
        margin-bottom: 2rem;
        text-transform: capitalize;
      }
      .blog:not(:last-child) {
        border-bottom: 0.8px solid #666;
      }
      .blog > * {
        font-size: var(--body-size);
      }
      .date {
        display: block;
        margin-bottom: 1rem;
        font-size: 16px;
        color: #666;
      }
      .tag {
        display: block;
        margin-top: 1rem;
        font-size: 16px;
        color: #666;
      }
      .title {
        font-size: var(--heading-2-size);
        margin: 3rem 0 1rem 0;
      }
      .edit, .delete {
        margin: 2rem 1rem 2rem 0;
        border-radius: 5px;
        padding: 0.5rem 1rem;
        font-size: var(--heading-3-size);
        color: #444;
        border: 3px solid #555;
        background-color: #FFDA78;
        font-weight: 500;
        transition: 0.2s ease;
        &:hover{
          box-shadow: 5px 5px 8px rgba(0, 0, 0, 0.4);
        }
      }
      .delete{
        background-color: #FF6969;
      }
      .content {
        white-space: pre-wrap;
      }
      .container div:nth-child(2){
        width: 125px;
        height: 50px;
        position: absolute;
        top: 55px;
        right: 50px;
        border-radius: 5px;
        border: 3px solid #555;
        background-color: #88D66C;
        transition: 0.2s ease;
        cursor: pointer;
        user-select: none;
        &:hover{
          box-shadow: 5px 5px 8px rgba(0, 0, 0, 0.4);
        }
      }

      .container div:nth-child(2) span{
        position: absolute;
        top: 50%;
        left: 50%;
        font-size: 1.5rem;
        font-weight: 500;
        color: #444;
        transform: translate(-50%, -53%);
      }
      .no-blog{
        box-shadow: 0 0 8px rgba(0, 0, 0, 0.5);
        font-size: 1.25rem;
        border: 4px solid #555;
        border-radius: 10px;
        width: fit-content;
        padding: 0.5rem 1rem;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h1>My Blogs</h1>
      <div><span>Create</span></div>
      <% if(blogs.length){ %>
        <% for (let b of blogs){ %>
        <div class="blog" id="<%=b.id%>">
          <h2 class="title"><%=b.title%></h2>
          <span class="date"><%=b.date%></span>
          <p class="content"><%= b.content %></p>
          <p class="tag">On: <%=b.tag%></p>
          <button class="delete">Delete</button>
          <button class="edit">Edit</button>
        </div>
        <% } %>
      <% }else{%>
          <p class="no-blog">You have No Blogs Yet, Let's Create Some... <br/>by Clicking on That Green Button at Corner</p>
      <% } %>
        
    </div>
    <script>
      document.addEventListener('DOMContentLoaded', ()=>{
        document.querySelectorAll('.edit').forEach((button) =>{
          button.addEventListener('click', ()=>{
            window.location.href = `/edit/${button.parentNode.id}`;
          });
        });
        document.querySelectorAll('.delete').forEach((button) =>{
          button.addEventListener('click', ()=>{
            window.location.href = `/del/${button.parentNode.id}`
          });
        });
        document.querySelector('.container div:nth-child(2)').addEventListener('click', ()=>{
          window.location.href = `/new`;
        });
      });
    </script>
  </body>
</html>
